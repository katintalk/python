def computepay(hours, rate):
   #print("in computepay", hours, rate)
   regpay=hours*rate
   if hours>40:
       overpay=(hours-40)*(rate*1.5)
       pay=regpay+overpay
   else:
       pay=regpay
   return pay
h=input("Enter hours: ")
r=input("Enter rate: ")
hours=float(h)
rate=float(r)
cp=computepay(hours,rate)
print("Pay:", cp)
