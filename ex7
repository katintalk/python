count=0
total=0.0
while True:
    a=input('Enter a number: ')
    if a=='done':
        break
    try:
        b=float(a)
    except:
        print('Invalid input')
        continue
    count=count+1
    total=total+b
    aver=total/count
try:
 print(count, total, aver)
except:
 print(count, total, 0)
